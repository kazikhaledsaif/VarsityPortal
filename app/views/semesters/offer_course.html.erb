<h1 class="mt-3"> <%= @semester.name %> </h1> <h3><%= @semester.year %></h3>

<hr>

<div>
  <h5>Selected Courses</h5>
  <% if flash[:success] %>
    <div class="alert alert-info alert-dismissible fade show" role="alert">
      <strong><%= flash[:success] %></strong>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

  <% end %>
  <% if flash[:error] %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <strong><%= flash[:error] %></strong>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

  <% end %>
  <table  class="table table-striped">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">title</th>
      <th scope="col">credit</th>
      <th scope="col">code</th>
      <th scope="col">Action</th>

    </tr>
    </thead>
    <tbody>

    <% @semester.courses.each_with_index do |course, index| %>
      <tr>
        <td><%=  index+1 %></td>
        <td><%=  course.title %></td>
        <td><%=  course.credit %></td>
        <td><%=  course.code %></td>
        <td>
          <%= link_to(remove_offer_course_path(@semester,course), class: 'mr-3') do %>
            <i class="fas fa-times mr-1"></i>Remove
          <% end %>


        </td>
      </tr>
    <% end %>

    </tbody>
  </table>

</div>
<hr>
<div>
  <div>
    <h5>All Courses</h5>
    <table  class="table table-striped">
      <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">title</th>
        <th scope="col">credit</th>
        <th scope="col">code</th>
        <th scope="col">Action</th>

      </tr>
      </thead>
      <tbody>

      <% @courses.each_with_index do |course, index| %>
        <tr>
          <td><%=  index+1 %></td>
          <td><%=  course.title %></td>
          <td><%=  course.credit %></td>
          <td><%=  course.code %></td>
          <td>
            <%= link_to(add_offer_course_path(@semester,course), class: 'mr-3') do %>
              <i class="fas fa-check mr-1"></i>Select
            <% end %>


          </td>
        </tr>
      <% end %>

      </tbody>
    </table>

  </div>


</div>