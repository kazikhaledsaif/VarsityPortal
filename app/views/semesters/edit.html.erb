<div class="container">

  <h1 class="mt-5">Update Semester</h1>
  <%= form_for @semester do |f| %>
    <div class="form-group">
      <label for="exampleInputEmail1">Title </label>
      <%= f.text_field :name, autofocus: true  , class: 'form-control form-control' %>
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Year </label>
      <%= f.text_field :year, autofocus: true  , class: 'form-control form-control' %>
    </div>

    <%= f.submit  class: 'btn btn-info' %>
  <% end %>
</div>

<p>
  <%= link_to 'Back', semesters_path , class: 'btn btn-primary btn-sm mt-3' %>
</p>

