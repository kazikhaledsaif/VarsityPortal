

<div class="container">
  <div class="row">
    <div class="col-6">

      <div class=" ">

        <%= image_tag "login.svg" ,class: 'login-img' %>
      </div>
    </div>
    <div class="col-6">
      <div class="welcome-page-form-wrapper">
        <h1 class="text-left welcome-page-headline-text">Welcome to <span>Varsity Portal</span></h1>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>

            <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'form-control form-control' %>

            <span class="invalid-feedback" role="alert">
            </span>


          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Password</label>

            <%= f.password_field :password, autocomplete: "current-password" , class: 'form-control form-control' %>

            <span class="invalid-feedback" role="alert">
             </span>

          </div>


          <%= f.submit "Log in"  ,class: 'btn btn-info' %>



<% end %>
        <div class="pt-3">
          <p>  <%= render "devise/shared/links" %></p>
        </div>

      </div>
    </div>
  </div>
</div>












