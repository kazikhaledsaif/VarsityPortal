<div class="container">

  <h1 class="mt-5">Create new course</h1>
  <%= form_for @course do |f| %>
  <div class="form-group">
    <label for="exampleInputEmail1">Title </label>
    <%= f.text_field :title, autofocus: true  , class: 'form-control form-control' %>
  </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Credit</label>
      <%= f.text_field :credit, autofocus: true  , class: 'form-control form-control' %>
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Course Code</label>
      <%= f.text_field :code, autofocus: true  , class: 'form-control form-control' %>
    </div>
    <%= f.submit  class: 'btn btn-info' %>
  <% end %>
</div>

<p>
  <%= link_to 'Back', courses_path , class: 'btn btn-primary btn-sm mt-3' %>
</p>


